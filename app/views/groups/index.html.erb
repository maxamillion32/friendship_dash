<%= render partial: 'partials/back', locals: {path: root_path}  %>

<h1>Groups</h1>

<table class="table table-bordered table-striped">
    <tr>
      <th colspan="2"></th>
      <th>Group Name</th>
    </tr>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= link_to group do%>
            <%= icon "eye" %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_group_path(group) do %>
            <%= icon "edit" %>
          <% end %>
        </td>
        <td><%= group.group_name %></td>
      </tr>
    <% end %>
  </table>
