<h1>Create New Community Health Worker</h1>
<%= form_for @user, html: {role: "form", class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-md-3 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :first_name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-md-3 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :last_name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-3 col-md-7">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= link_to "Cancel", health_workers_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>