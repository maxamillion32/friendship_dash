<div class="row">
  <div class="col-md-12 well text-center">
    <h1>Activate <%= @participant.first_name %> <%= @participant.last_name %></h1>
    <br>
    <%= form_for @participant, html: {role: "form", class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :research_assistant_id, "Research Assistant", class: "col-md-3 control-label" %>
        <div class="col-md-6">
          <%= f.collection_select(:research_assistant_id, @assistants, :id, :last_and_first_name, {}, {class: 'form-control'}) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :health_worker_id, "Community Health Worker", class: "col-md-3 control-label" %>
        <div class="col-md-6">
          <%= f.collection_select(:health_worker_id, @chws, :id, :last_and_first_name, {}, {class: 'form-control'}) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
          <%= f.hidden_field :status, value: "active" %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
          <%= link_to "Cancel", participants_path, class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>